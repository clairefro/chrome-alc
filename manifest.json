{
  "manifest_version": 2,
  "name": "Mini Alc",
  "description": "Performs a mini search of selected text in Alc's Japanese-English phrase database",
  "version": "0.1",

  "permissions": [
    "cookies",
    "activeTab",
    "tabs",
    "*://eow.alc.co.jp/*"
  ],
  "browser_action": {
    "default_icon": "./assets/icon-16.png",
    "default_popup": "popup.html"
   },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "./assets/icon-16.png",
    "48": "./assets/icon-48.png",
    "128": "./assets/icon-128.png"
  }
}
